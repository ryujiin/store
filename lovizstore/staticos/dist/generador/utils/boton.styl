.btn
	font-family f_imprenta
	text-transform uppercase
	letter-spacing 1px
	&:focus
		outline none
	&.btn-contraste
		background #111
		color #fff
	&.btn-default
		border-radius 0px
	&.btn-large
		padding 12px 3em
		font-size 20px
		line-height 1.33
		border-radius 0px
	&.btn-next
		background verde
		color #fff
		&:hover
			background grey
	&.btn-facebook
		border 1px solid #3b5998
		background #3b5998
		color #fff
		font-size 16px
		font-weight bold
	&.btn-disban
		background #999
		opacity 0.8
	&.btn-especial
		background #468847
		border-color #3d773e
		color #fff
		font-weight bold
		&:hover
			opacity 0.7
	&.btn-link
		color #333
		letter-spacing 2px
		text-decoration underline
		font-weight bold